/* pages/grade/index/index.wxss */
@import '../../../utils/wxParse/wxParse.wxss';
.container1{
  height:100%;
  background-color: #E8F0F0;
  box-sizing: border-box;
}
.header{
  position: fixed;
  top:0;
  left:0;
  width:100%;
  height:100rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  background-color: #fff;
  z-index: 10000 ;
}
.header > view{
  flex:1;
  position: relative;
  text-align:center;
}
.header > view > view{
  position: absolute;
  padding:4rpx 40rpx;
  left:50%;
  bottom:-20rpx;
  transform:translateX(-50%);
  background-color: #00998d;
}
.my-scroll{
  width:690rpx;
  margin:0 auto;
  box-sizing: border-box;
  background-color: #fff;
  border-radius: 10rpx;
  -webkit-border-radius: 10rpx;
  -moz-border-radius: 10rpx;
  -ms-border-radius: 10rpx;
  -o-border-radius: 10rpx;
}
::-webkit-scrollbar{
  display: none;
}

.first{
  width:100%;
  box-sizing: border-box;
}
.first .top .tips{
  position: relative;
  height:60rpx;
  padding:0 15rpx;
  line-height:60rpx;
  background-color: #00998d;
}
.first > .top > .tips::after{
  content:'';
  position: absolute;
  left:100%;
  width:0;
  height:0;
  border-top:60rpx solid #00998d;
  border-right:60rpx solid transparent;
}
.first .top .my-picker{
  margin-right:20rpx;
}
.first .top  .my-picker  .tips1{
  display: inline-block;
  padding:0 10rpx;
  color: #fff;
  background-color: #FBA02A;
  border-radius: 16rpx;
}

.first .bg-img{
  position: relative;
  margin-top:60rpx;
}
.first .bg-img .bg-list1{
  width:396rpx;
  height:63rpx;
}
.first .bg-img::after{
  position: absolute;
  content:'';
  bottom:-14rpx;
  width:396rpx;
  height:6rpx;
  background-color: #00998d;
}
.first .bg-img::before{
  position: absolute;
  content:'';
  bottom:-20rpx;
  width:396rpx;
  height:2rpx;
  background-color: #00998d;
}
.my-table{

}
.my-table > view{
  flex:1;
  display: flex;
  flex-direction: column;
  align-items: center;
  border-right: 1px solid #eee;
}
.my-table > view:last-of-type{
  border-right:none;
}
.my-table > view > text:first-child{
  font-size: 24rpx;
  color:#999;
}
.my-table > view > text:nth-child(2){
  font-size: 48rpx;
  color: #333;
}

.nav-title{
  width:690rpx;
  height:40rpx;
  margin-bottom:30rpx;
  font-size: 32rpx;
  text-align:center;
  line-height:40rpx;
  background-image: url(http://pc3b73iy4.bkt.clouddn.com/background/bg-line.png);
  background-repeat: no-repeat;
  background-position: 50% 50%;
  background-size: 591rpx 25rpx;
}
.list{
  padding:0 30rpx;
  box-sizing: border-box;
}
.list .title{
  display: inline-block;
  padding:2rpx 15rpx;
  margin-right:10rpx;
  border-radius: 22rpx;
  -webkit-border-radius: 22rpx;
  -moz-border-radius: 22rpx;
  -ms-border-radius: 22rpx;
  -o-border-radius: 22rpx;
}
.list .my-table > view{
  border-right:none;
}
.list .my-table > view > text:first-child{
  font-size: 24rpx;
}
.list .my-table > view > text:nth-child(2){
  font-size: 28rpx;
}
.t-color{
  color:#065B54;
}
.t-bg{
  background-color:RGBA(0, 152, 140, .5);
}


.second .list .list-item{
  padding:10rpx 20rpx;
  background-image: url(http://pc3b73iy4.bkt.clouddn.com/background/bg-slant.png);
  background-color: #fff;
  box-sizing: border-box;
}
.third {
  padding:0 30rpx;
}
.third .list-item{
  
}
.third .list-item .title{
  position: relative;
  height:50rpx;
  padding:0 20rpx;
  background-color: #00998d;
  color:#fff;
  line-height:50rpx;
}
.third .list-item .title::after{
  content:'';
  position: absolute;
  right:-25rpx;
  width:0;
  height:0;
  border-top:50rpx solid #00998d;
  border-right:50rpx solid transparent;
}
.third .list-item .title::before{
  content:'';
  position: absolute;
  right:-25rpx;
  width:0 ;
  height:0;
  border-bottom:50rpx solid #00998d;
  border-right:50rpx solid transparent;
}
.fourth{
  position: relative;
  min-height:600rpx;
}
.fourth .btm-box .bg-btm{
  position: absolute;
  bottom:0;
  left:0;
  width:690rpx;
}
.fourth .btm-box .bg-btm1{
  position: absolute;
  bottom:100rpx;
  left:50%;
  width:295rpx;
  height:87rpx;
  transform:translateX(-50%);
  -webkit-transform:translateX(-50%);
  -moz-transform:translateX(-50%);
  -ms-transform:translateX(-50%);
  -o-transform:translateX(-50%);
}
.fourth .btm-box .btm-text{
  position: absolute;
  bottom:40rpx;
  width:690rpx;
  color: #fff;
  font-size: 24rpx;
  text-align:center;
}
.article{
  display: flex;
  flex-flow: column wrap;
  justify-content: space-between;
  width:690rpx;
  min-height:600rpx;
  padding:20rpx;
  font-size: 30rpx;
  box-sizing: border-box;
  border:1px solid #fff;
}
.article .header1{
  display: flex;
  flex-flow: column wrap;
}
.article .header1 > text:nth-child(2){
  margin-left:30rpx;
}
.article .footer{
  display: flex;
  flex-flow: column wrap;
  justify-content: center;
  align-items: center;
}
.article .body{
  flex:1;
}