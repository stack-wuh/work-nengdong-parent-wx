/* pages/grade/recode/recode.wxss */
.container1{
  width:100%;
  height:100%;
  padding:20rpx 0;
  background-color: #E8F0F0;
  box-sizing: border-box;
}
.header{
  position: fixed;
  top:0;
  left:0;
  display: flex;
  align-items: center;
  justify-content: center;
  width:100%;
  height:100rpx;  
  font-size: 32rpx;
  background-color: #fff;
  box-sizing: border-box;
}
.header > view{
  display: flex;
  align-items: center;
  justify-content: center;
  width:374rpx;
  height:68rpx;
  background-color: #E8F0F0;
  border-radius: 10rpx;
  -webkit-border-radius: 10rpx;
  -moz-border-radius: 10rpx;
  -ms-border-radius: 10rpx;
  -o-border-radius: 10rpx;
}
.header > view > view{
  flex:1;
  height:68rpx;
  line-height:68rpx;
  text-align: center;
  color: #00998d;
}
.active{
  color: #fff !important;
  border-radius:10rpx;
  background-color: #00998d;
  -webkit-border-radius:10rpx;
  -moz-border-radius:10rpx;
  -ms-border-radius:10rpx;
  -o-border-radius:10rpx;
}
.content{
  width:100%;
  padding-bottom:20rpx;
  background-color:#E8F0F0;
  box-sizing: border-box;
}
.list{
  width:690rpx;
  height:100%;
  margin: 0 auto;
  border-radius:10rpx;
  background-color: #fff;
  -webkit-border-radius:10rpx;
  -moz-border-radius:10rpx;
  -ms-border-radius:10rpx;
  -o-border-radius:10rpx;
}
.list .item{
  padding:30rpx 50rpx 0 50rpx;
}
.list .item .list-item{
  margin-bottom:15rpx;
}
.list .item .list-item .list-detail{
  width:100%;
  margin-bottom:10rpx;
}
.list .item1 .list-detail>view:not(:nth-child(1)){
  padding-left:50rpx;
}
.list .item .text-detail{
  padding:20rpx;
  border-radius:10rpx;
  background-color: #F4F4F4;
}
.list .item2{
  padding-top:0;
  padding-bottom:20rpx;
}
.list .item2:first-of-type{
  padding-top:20rpx;
}
.list .item2:last-of-type{
  padding-bottom:0;
}