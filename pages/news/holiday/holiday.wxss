/* pages/news/holiday/holiday.wxss */
.container{
  /* height:100%; */
}
.list{
  width: 100%;
  padding:30rpx;
  box-sizing: border-box;
}
.list .list-item{
  width:100%;
  padding:30rpx;
  padding-left:55rpx;
  background-color: #fff;
  border-radius:10rpx;
  box-sizing: border-box;
  -webkit-border-radius:10rpx;
  -moz-border-radius:10rpx;
  -ms-border-radius:10rpx;
  -o-border-radius:10rpx;
}
.header{
  width:100%;
  height:70rpx;
  line-height:60rpx;
  text-align: center;
  background-image: url('http://pc3b73iy4.bkt.clouddn.com/background/bg-ribbon.png');
  background-size: 300rpx 60rpx;
  background-position: center center;
  background-repeat: no-repeat;
  box-sizing: border-box;
}
.item-title{
  position: relative;
}
.item-title::after{
  content:'';
  position: absolute;
  left:-30rpx;
  top:10rpx;
  padding:10rpx;
  border-radius:50%;
  background:radial-gradient(#00988C,rgba(0,152,140,.3),rgba(0,152,140,.5));
  -webkit-border-radius:50%;
  -moz-border-radius:50%;
  -ms-border-radius:50%;
  -o-border-radius:50%;
}


::-webkit-scrollbar{
  display: none;
}
.cutline{
  width:90%;
  height: 2rpx;
  margin:10rpx 30rpx 20rpx 30rpx;
  background-color: #eee;
  box-sizing: border-box;
}
.modal{
  position: fixed;
  top:0;
  left:0;
  right:0;
  bottom:0;
  background-color: rgba(0,0,0,.5);
  z-index: 10000 ;
}
.modal .wrapper{
  width:690rpx;
  height:90%;
  padding:20rpx;
  border-radius:4rpx;
  background-color: #fff;
  box-sizing: border-box;
  -webkit-border-radius:4rpx;
  -moz-border-radius:4rpx;
  -ms-border-radius:4rpx;
  -o-border-radius:4rpx;
}
.modal .wrapper .article{
  height: 90%;
  overflow-y: scroll;
}