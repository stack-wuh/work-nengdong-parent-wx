/* pages/news/list/list.wxss */
.container1{
  height:100%;
}
.top{
  position: fixed;
  top:0;
  left:0;
  padding:0 30rpx;
  box-sizing: border-box;
  background-color: #fff;
}
.scroll-box{
  width:100%;
  height:60rpx;
  overflow: hidden;
}
.my-scroll{
  width:700rpx;
  height:60rpx;
  line-height:60rpx;
  white-space:nowrap;
  box-sizing: border-box;
  /* overflow: hidden; */
}
.my-scroll .scroll-item{
  position: relative;
  display: inline-block;
  height:50rpx;
  padding:0 5rpx;
  margin:0 10rpx;
  font-size: 32rpx;
  line-height: 50rpx;
}
.item-active{
  color: #00998d;
}
.border-bottom{
  position: absolute;
  bottom:-5rpx;
  left: 50%;
  transform:translateX(-50%);
  width:30rpx;
  border-bottom: 6rpx solid #00998d;
  -webkit-transform:translateX(-50%);
  -moz-transform:translateX(-50%);
  -ms-transform:translateX(-50%);
  -o-transform:translateX(-50%);
}
.list{
  width:100%;
  padding:0 30rpx;
  background-color: #fff;
  box-sizing: border-box;
}
.list-item{
  padding:30rpx 0;
  border-bottom:1px solid #eee;
}
.list-item .list-item-right > view:nth-child(2){
  margin:2px 0;
  width:100%;
}
.list-item:last-of-type{
  border:none;
}
.list .list-item .list-item-right{
  width:40%;
  overflow: hidden;
  box-sizing: border-box;
}
