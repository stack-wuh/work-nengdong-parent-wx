/* pages/concat/list/list.wxss */
.container1{
  width:100%;
  height:100%;
  box-sizing: border-box;
}
.container1 .list{
  width:100%;
  font-size:30rpx;
  box-sizing: border-box;
}

.list .list-item{
  padding:20rpx 0;
  margin-bottom:15rpx;
  background-color: #fff;
}
.list .list-item .header{
  padding:20rpx;
  padding-top:0;
  padding-left:60rpx;
}
.list .list-item .header .title{
  position: relative;
}
.list .list-item .header .title::before{
  position: absolute;
  left:-40rpx;
  top:4rpx;
  content:'';
  height:0;
  width:0;
  padding:15rpx;
  border-radius:50%;
  background:radial-gradient(#00988C,rgba(0,152,140,.3),rgba(0,152,140,.5));
  -webkit-border-radius:50%;
  -moz-border-radius:50%;
  -ms-border-radius:50%;
  -o-border-radius:50%;
}
.list .list-item .header+.content{
  padding:0 20rpx 20rpx 20rpx;
  border-bottom:1px solid #eee;
}
.list .list-item .sub-title{
  padding:0 20rpx;
}
.list .list-item .sub-title+.content{
  margin:20rpx;
  padding:20rpx;
  color: #999;
  border-radius:4rpx;
  background-color: #eee;
  -webkit-border-radius:4rpx;
  -moz-border-radius:4rpx;
  -ms-border-radius:4rpx;
  -o-border-radius:4rpx;
}